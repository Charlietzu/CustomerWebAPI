<table class="table table-striped">
    <thead>
        <tr>
            <td scope="col">
                ID
            </td>
            <td scope="col">
                Customer Name
            </td>
            <td scope="col">#</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in (List<CustomerModel>)ViewBag.CustomersList)
        {
            <tr scope="row">
                <td>@item.Id.ToString()</td>
                <td>@item.CustomerName</td>
                <td>
                    <button class="btn btn-primary" onclick="create(@item.Id.ToString())">Update</button>
                    <button class="btn btn-danger" onclick="remove(@item.Id.ToString())">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-block btn-success" onclick="create()">Create a Customer</button>

<script>
    function create(id) {
        if (!id) {
            window.location.href = window.location.origin + "/Home/Create/";
        } else {
            window.location.href = window.location.origin + "/Home/Create/" + id;
        }
    }

    function remove(id){
        window.location.href = window.location.origin + "/Home/Delete/" + id;
    }
</script>